<Window x:Class="SeriousOrganizerGui.LabelSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeriousOrganizerGui"
        mc:Ignorable="d"
        Title="LabelSelect" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0">Select stuff here</Label>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Width="200" Height="40" Click="Button_Click" Margin="5">Ok</Button>
            <Button Width="200" Height="40" Click="Button_Click" Margin="5">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
