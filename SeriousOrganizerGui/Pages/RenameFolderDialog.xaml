<Window x:Class="SeriousOrganizerGui.RenameFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeriousOrganizerGui"
        mc:Ignorable="d"
        Title="Rename folder" Height="150" Width="400" 
         KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel>
            <Label Content="New folder name" Margin="5"/>
            <TextBox Name="txt_new_name" VerticalAlignment="Center" Width="auto" Height="25" VerticalContentAlignment="Center" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Ok" Margin="5" Width="40" Height="30" Click="BtnRename_Click"/>
                <Button Content="Cancel" Margin="5" Width="40" Height="30" Click="BtnClose_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
